{
    "name": "leyer/translation-addition",
    "type": "bundle",
    "description": "This bundles enables edition of translations directly from your application user interface using Javascript.",
    "keywords": [
        "jms",
        "translator",
        "addition",
        "inline",
        "edition",
        "symfony",
        "javascript",
        "i18n",
        "internationalization"
    ],
    "license": "MIT",
    "authors": [
        {
            "name":     "Adrien Russo",
            "email": "contact@adrienrusso.com"
        }
    ],
    "require": {
        "php":              ">=5.4.0"
    },
    "require-dev": {
        "jms/translation-bundle":  ">=1.1"
    },
    "autoload": {
        "psr-0": { "Leyer\\TranslationAdditionBundle\\": "" }
    },
    "target-dir": "Leyer/TranslationAdditionBundle",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
